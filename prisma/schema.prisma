generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Evento {
  id        String   @id @default(uuid()) // ID como string UUID
  titulo    String
  descricao String
  data      String   // formato ISO, ex: "2023-08-01"
  local     String
  categoria String?
  tipo      String?
  imagemUrl String?
}

model Destaque {
  id        String   @id @default(uuid())
  titulo    String
  descricao String
  imagemUrl String?
}
